<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ActivityConsulta"
    android:id="@+id/ActivityConsulta">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/logo_almo"
        android:scaleType="fitCenter"
        android:contentDescription="@string/logo_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Título -->
    <TextView
        android:id="@+id/textTituloConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/breeseriffont"
        android:layout_margin="100dp"
        android:gravity="center"
        android:text="Consulta de Itens"
        android:textColor="@color/blueProj"
        android:textSize="26dp"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botão de consulta por QR Code -->
    <Button
        android:id="@+id/buttonConsultaQr"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:text="Consultar por QR Code"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:backgroundTint="@color/orange"
        app:layout_constraintTop_toBottomOf="@id/textTituloConsulta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo para digitar o ID -->
    <EditText
        android:id="@+id/editTextIdItem"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp"
        android:hint="Digite o ID do item"
        android:fontFamily="@font/breeseriffont"
        android:background="@drawable/edittext_border"
        android:padding="10dp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/buttonConsultaQr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botão de consulta por ID -->
    <Button
        android:id="@+id/buttonConsultaId"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:text="Consultar por ID"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:backgroundTint="@color/orange"
        app:layout_constraintTop_toBottomOf="@id/editTextIdItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Resultado -->
    <TextView
        android:id="@+id/textResultado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="25dp"
        android:text="Resultado aparecerá aqui..."
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:padding="15dp"
        android:background="@drawable/edittext_border"
        app:layout_constraintTop_toBottomOf="@id/buttonConsultaId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
