<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".AcitivityFuncionario"
    tools:ignore="ExtraText">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/logo_almo"
            android:scaleType="fitCenter"
            android:contentDescription="@string/logo_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- FOTO DE PERFIL CIRCULAR -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgIconeUsuario"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/ic_person"
            android:contentDescription="@string/icon_user"
            app:layout_constraintTop_toBottomOf="@+id/imgLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:shapeAppearanceOverlay="@style/CircleImageView"/>

        <!-- Nome do funcionário -->
        <TextView
            android:id="@+id/txtFuncionario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/breeseriffont"
            android:text="Funcionário"
            android:textColor="#0D4D80"
            android:textSize="18dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@+id/imgIconeUsuario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <!-- Campo para editar nome -->
        <EditText
            android:id="@+id/etFuncionario"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Digite o nome"
            android:visibility="gone"
            android:textColor="#0D4D80"
            android:textSize="18dp"
            android:imeOptions="actionDone"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/imgIconeUsuario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <View
            android:id="@+id/viewDivisoria"
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#0D4D80"
            app:layout_constraintTop_toBottomOf="@+id/txtFuncionario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/txtTituloEstoque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestão do Estoque:"
            android:textColor="#0D4D80"
            android:textStyle="bold"
            android:fontFamily="@font/breeseriffont"
            android:layout_marginTop="20dp"
            android:textSize="24dp"
            app:layout_constraintTop_toBottomOf="@+id/viewDivisoria"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnConsultar"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:text="Consultar/Adquirir"
            android:backgroundTint="#eb4b17"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/breeseriffont"
            app:layout_constraintTop_toBottomOf="@+id/txtTituloEstoque"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnDevolver"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:text="Devolver"
            android:textSize="18sp"
            android:backgroundTint="#eb4b17"
            android:fontFamily="@font/breeseriffont"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/btnConsultar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnCadastro"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:text="Cadastro de Itens"
            android:textSize="18sp"
            android:backgroundTint="#eb4b17"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/breeseriffont"
            app:layout_constraintTop_toBottomOf="@+id/btnDevolver"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
