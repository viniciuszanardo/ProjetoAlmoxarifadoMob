<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/ActivityCadastroItens">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        tools:context=".ActivityCadastroItens">

        <ImageView
            android:id="@+id/imgLogoPequeno"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/logo_almo"
            android:scaleType="fitCenter"
            android:contentDescription="@string/logo_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/txtTituloCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Cadastrar item"
            android:textColor="#0D4D80"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/imgLogoPequeno"
            tools:layout_editor_absoluteX="24dp" />

        <ImageView
            android:id="@+id/imgPlaceholderItem"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#FFFFFF"
            android:padding="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_menu_gallery"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTituloCadastro"/>

        <EditText
            android:id="@+id/editTextFornecedor"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="32dp"
            android:hint="Fornecedor"
            android:background="@drawable/edittext_border"
            android:padding="10dp"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/imgPlaceholderItem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/editTextNomeItem"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="10dp"
            android:hint="Nome do item"
            android:background="@drawable/edittext_border"
            android:padding="10dp"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/editTextFornecedor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/editTextID"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="10dp"
            android:hint="ID"
            android:background="@drawable/edittext_border"
            android:padding="10dp"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/editTextNomeItem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/editTextDescricao"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="10dp"
            android:hint="Descrição..."
            android:gravity="top"
            android:background="@drawable/edittext_border"
            android:padding="10dp"
            android:inputType="textMultiLine"
            app:layout_constraintTop_toBottomOf="@id/editTextID"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnCadastrar"
            android:layout_width="220dp"
            android:layout_height="55dp"
            android:layout_marginTop="32dp"
            android:text="Cadastrar"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#eb4b17"
            android:layout_marginBottom="40dp"
            app:layout_constraintTop_toBottomOf="@id/editTextDescricao"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>