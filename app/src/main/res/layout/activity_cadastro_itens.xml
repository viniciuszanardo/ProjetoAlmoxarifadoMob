<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/ActivityCadastroItens">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        tools:context=".ActivityCadastroItens">

        <ImageView
            android:id="@+id/imgLogoPequeno"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/logo_almo"
            android:scaleType="fitCenter"
            android:contentDescription="@string/logo_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtTituloCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Cadastrar item"
            android:textColor="#0D4D80"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/breeseriffont"
            app:layout_constraintTop_toBottomOf="@id/imgLogoPequeno" />

        <ImageView
            android:id="@+id/imgPlaceholderItem"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#FFFFFF"
            android:padding="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_menu_gallery"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtTituloCadastro" />

        <EditText
            android:id="@+id/editTextFornecedor"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="32dp"
            android:hint="Fornecedor"
            android:background="@drawable/edittext_border"
            android:padding="10dp"
            android:textColor="#000000"
            android:fontFamily="@font/breeseriffont"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/imgPlaceholderItem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/editTextNomeItem"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="10dp"
            android:hint="Nome do item"
            android:background="@drawable/edittext_border"
            android:padding="10dp"
            android:textColor="#000000"
            android:fontFamily="@font/breeseriffont"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/editTextFornecedor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/editTextID"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="10dp"
            android:hint="ID"
            android:background="@drawable/edittext_border"
            android:padding="10dp"
            android:textColor="#000000"
            android:fontFamily="@font/breeseriffont"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/editTextNomeItem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/editTextDescricao"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="10dp"
            android:hint="Descrição..."
            android:gravity="top"
            android:background="@drawable/edittext_border"
            android:padding="10dp"
            android:textColor="#000000"
            android:fontFamily="@font/breeseriffont"
            android:inputType="textMultiLine"
            app:layout_constraintTop_toBottomOf="@id/editTextID"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/buttonCadastrar"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/orange"
            android:fontFamily="sans-serif-medium"
            android:padding="15dp"
            android:text="Cadastrar"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/editTextDescricao"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
